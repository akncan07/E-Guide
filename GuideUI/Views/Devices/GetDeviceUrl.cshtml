                            </svg>

                        </a>

                    }
                    else if (item.PlatformGroup == 2)
                    {
                        <a class="rounded-lg  bg-slate-300 dark:bg-gray-600 p-2 mr-1 " href="/@Model.CurrentLanguage/@item.PlatformName/@modelContent.Url">

                            <svg class="fill-stone-700	dark:fill-gray-300 dark:hover:fill-lime-500  hover:fill-lime-700"
                         xmlns="http://www.w3.org/2000/svg" height="24" width="24">
