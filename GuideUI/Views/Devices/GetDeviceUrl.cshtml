@model GuideUI.Models.GuideListData;

@{
    var modelContent = Model.Content;
}

<section class="w-full">
    <div class="rounded-lg px-6 py-8 mx-3 mb-3 flex flex-col shadow-[0_0px_10px_0px_rgba(0,0,0,0.2)] ">
        <div class="mb-2 text-base font-medium text-slate-900  dark:text-gray-300">
            <a href="#">@Model.CurrentPlatform /</a>
            <a href="#"> @Model.CurrentCategory.Title/</a>
            <span class="text-sm text-slate-800 dark:text-gray-300">@Model.Content.Title</span>
        </div>

        <div class="flex justify-between items-center">
            <div class="flex justify-center flex-col">

                <div class="flex flex-wrap">
                    <a href="#"
                       class=" px-3 mr-1 mb-1  h-7 rounded-md flex items-center justify-center bg-slate-300 text-slate-700 dark:bg-slate-600 dark:text-gray-300">
                        @Model.SystemLanguage.KeywordText()
                    </a>
                    @foreach (var item in Model.Keywords)
                    {
                        <a href="/@Model.CurrentLanguage/@Model.CurrentPlatform/@Model.SystemLanguage.UrlKeywordText()/@item.KeywordId"
                       class="px-3 mr-1 mb-1  h-7 rounded-md flex items-center justify-center bg-slate-300 text-slate-700 dark:bg-slate-600 dark:text-gray-300  peer-checked:bg-slate-100 peer-checked:text-slate-900">
                            @item.Title
                        </a>
                    }

                </div>
            </div>
            <div class="flex items-center">


                @foreach (var item in Model.OtherPlatforms)
                {
                    if (item.PlatformGroup == 1)
                    {
                        <a class="bg-slate-300 rounded-lg dark:bg-gray-600 p-2 mr-1  flex justify-center items-center "
                   href="/@Model.CurrentLanguage/@item.PlatformName/@modelContent.Url">

                            <svg class="fill-stone-700	dark:fill-gray-300 dark:hover:fill-lime-500  hover:fill-lime-700"
                         xmlns="http://www.w3.org/2000/svg" height="24" width="24">
