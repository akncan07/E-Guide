                    }
                    else if (item.PlatformGroup == 3)
                    {
                        <a class="bg-slate-300 rounded-lg dark:bg-gray-600 p-2 mr-1" href="/@Model.CurrentLanguage/@item.PlatformName/@modelContent.Url">
                            <svg class="fill-stone-700	dark:fill-gray-300 dark:hover:fill-lime-500  hover:fill-lime-700" xmlns="http://www.w3.org/2000/svg" height="24" width="24"><path d="M12 20.5Q12.425 20.5 12.713 20.212Q13 19.925 13 19.5Q13 19.075 12.713 18.788Q12.425 18.5 12 18.5Q11.575 18.5 11.288 18.788Q11 19.075 11 19.5Q11 19.925 11.288 20.212Q11.575 20.5 12 20.5ZM7 16H17V6H7ZM7 23Q6.175 23 5.588 22.413Q5 21.825 5 21V3Q5 2.175 5.588 1.587Q6.175 1 7 1H17Q17.825 1 18.413 1.587Q19 2.175 19 3V21Q19 21.825 18.413 22.413Q17.825 23 17 23Z" /></svg>
                        </a>
                    }
                }

            </div>
        </div>
    </div>

    <div class="mb-3 rounded-lg px-6 py-8 mx-3 shadow-[0_0px_10px_0px_rgba(0,0,0,0.2)]">
        <div class="flex justify-between items-center">
            <h1 class="text-3xl mb-3 text-base font-medium text-slate-900 dark:text-gray-300">

                @modelContent.Title



            </h1>
            <a class="rounded-lg  bg-slate-300 dark:bg-gray-600 flex items-center p-2" href="">
                <svg class="fill-stone-700 dark:fill-gray-300 hover:fill-lime-800 hover:dark:fill-lime-500"
                     xmlns="http://www.w3.org/2000/svg" height="40" width="40">
                    <path d="M15.917 27.208 27.208 20 15.917 12.792ZM20 36.667Q16.583 36.667 13.542 35.354Q10.5 34.042 8.229 31.771Q5.958 29.5 4.646 26.458Q3.333 23.417 3.333 20Q3.333 16.583 4.646 13.542Q5.958 10.5 8.229 8.229Q10.5 5.958 13.542 4.646Q16.583 3.333 20 3.333Q23.417 3.333 26.458 4.646Q29.5 5.958 31.771 8.229Q34.042 10.5 35.354 13.542Q36.667 16.583 36.667 20Q36.667 23.417 35.354 26.458Q34.042 29.5 31.771 31.771Q29.5 34.042 26.458 35.354Q23.417 36.667 20 36.667ZM20 20Q20 20 20 20Q20 20 20 20Q20 20 20 20Q20 20 20 20Q20 20 20 20Q20 20 20 20Q20 20 20 20Q20 20 20 20ZM20 33.875Q25.75 33.875 29.812 29.812Q33.875 25.75 33.875 20Q33.875 14.25 29.812 10.188Q25.75 6.125 20 6.125Q14.25 6.125 10.188 10.188Q6.125 14.25 6.125 20Q6.125 25.75 10.188 29.812Q14.25 33.875 20 33.875Z" />
                </svg>
            </a>
        </div>

        <p class="text-slate-900 dark:text-gray-300 mt-3">
            @if (Model.Content != null)
            {
                @modelContent.Description


            }
        </p>
    </div>
    <div class="mb-3 rounded-lg  px-6 py-8 mx-3 shadow-[0_0px_10px_0px_rgba(0,0,0,0.2)]">
        <h1 class="mb-2 text-xl text-base font-medium text-slate-900 dark:text-gray-300">

            @Model.SystemLanguage.DocumentText()

        </h1>
        <div>
            <div class="flex flex-wrap w-full">

                @foreach (var item in Model.Documents)
                {
                    <a href="" class="mr-1 mb-2 px-2 py-1  flex items-center justify-center rounded-md text-slate-300 border border-slate-200"
                   type="button" aria-label="Like">
                        <svg class="fill-gray-300" xmlns="http://www.w3.org/2000/svg" height="24" width="24">
                            <path d="M9 13H10V11H11Q11.425 11 11.713 10.712Q12 10.425 12 10V9Q12 8.575 11.713 8.287Q11.425 8 11 8H9ZM10 10V9H11V10ZM13 13H15Q15.425 13 15.713 12.712Q16 12.425 16 12V9Q16 8.575 15.713 8.287Q15.425 8 15 8H13ZM14 12V9H15V12ZM17 13H18V11H19V10H18V9H19V8H17ZM8 18Q7.175 18 6.588 17.413Q6 16.825 6 16V4Q6 3.175 6.588 2.587Q7.175 2 8 2H20Q20.825 2 21.413 2.587Q22 3.175 22 4V16Q22 16.825 21.413 17.413Q20.825 18 20 18ZM4 22Q3.175 22 2.588 21.413Q2 20.825 2 20V6H4V20Q4 20 4 20Q4 20 4 20H18V22Z" />
                        </svg>
                        <span class="ml-2">@item.DocumentName</span>
                    </a>
                }


            </div>
        </div>


    </div>
    <div class="rounded-lg  px-6 py-8 mx-3 shadow-[0_0px_10px_0px_rgba(0,0,0,0.2)]">
        <h1 class="mb-2 text-xl text-base font-medium text-slate-900 dark:text-gray-300">
            @Model.SystemLanguage.LinkedContentText()
        </h1>
        <div>
            <div class="flex flex-wrap">
                @foreach (var item in Model.Routings)
                {
                    <a href="#"
                   class=" px-3 mr-1 mb-1 py-1 rounded-md flex items-center justify-center bg-slate-300 text-slate-700 dark:bg-slate-600 dark:text-gray-300">
                        @item.Title
                    </a>
                }


            </div>
        </div>


    </div>

</section>



